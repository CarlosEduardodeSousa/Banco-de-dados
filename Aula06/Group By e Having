-- CLÁUSULA GROUP BY

SELECT DEPTNO, MIN(SAL), MAX(SAL), SUM(SAL) FROM SCOTT.EMP GROUP BY DEPTNO;

SELECT JOB, SUM(SAL), MIN(SAL), MAX(SAL) FROM SCOTT.EMP GROUP BY JOB;

--CLÁUSULA HAVING --> DEPENDE DA EXISTÊNCIA DO GROUP BY

SELECT JOB, MAX(SAL), MIN(SAL) FROM SCOTT.EMP GROUP BY JOB HAVING JOB <> 'MANAGER' ORDER BY JOB DESC;

SELECT JOB, AVG(SAL) FROM SCOTT.EMP GROUP BY JOB HAVING AVG(SAL) > 1500;

SELECT JOB, MAX(SAL), MIN(SAL) FROM SCOTT.EMP GROUP BY JOB HAVING JOB <> 'PRESIDENT';