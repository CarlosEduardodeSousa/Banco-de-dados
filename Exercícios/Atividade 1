Exercício 1

CREATE TABLE LOCAL(
    COD_LOC NUMBER(4),
    NOME VARCHAR2(25) NOT NULL,
    CONSTRAINT LOCAL_COD_LOC_PK PRIMARY KEY (COD_LOC)
);

CREATE TABLE DEPTO(
    COD_DEPTO NUMBER(4),
    NOME VARCHAR2(25) NOT NULL,
    COD_LOC NUMBER(4),
    CONSTRAINT DEPTO_COD_DEPTNO_PK PRIMARY KEY (COD_DEPTO),
    CONSTRAINT DEPTO_COD_LOC_FK FOREIGN KEY (COD_LOC) REFERENCES LOCAL (COD_LOC)
);

CREATE TABLE FUNC(
    COD_FUNC NUMBER(4),
    SOBRENOME VARCHAR2(25) NOT NULL,
    NOME VARCHAR2(25) NOT NULL,
    SALARIO NUMBER(10,2),
    DT_ADM DATE,
    COD_DEPTO NUMBER(4),
    COD_CARGO NUMBER(4),
    CONSTRAINT FUNC_COD_FUNC_PK PRIMARY KEY (COD_FUNC),
    CONSTRAINT FUNC_COD_DEPTO_FK FOREIGN KEY (COD_DEPTO) REFERENCES DEPTO (COD_DEPTO),
    CONSTRAINT FUNC_COD_CARGO_FK FOREIGN KEY (COD_CARGO) REFERENCES CARGO (COD_CARGO)
);

CREATE TABLE CARGO(
    COD_CARGO NUMBER(4),
    DESCRICAO VARCHAR2(30) NOT NULL,
    CBO NUMBER(8),
    CONSTRAINT CARGO_COD_CARGO_PK PRIMARY KEY (COD_CARGO)
);

Exercício 2

DESCRIBE LOCAL;
DESCRIBE DEPTO;
DESCRIBE FUNC;
DESCRIBE CARGO;

