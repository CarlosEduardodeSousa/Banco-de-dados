-- Exercício 1
SELECT EMPNO,ENAME, JOB FROM SCOTT.EMP WHERE JOB = (SELECT JOB FROM SCOTT.EMP WHERE EMPNO = 7369);

-- Exercício 2
SELECT EMPNO, ENAME, JOB, SAL FROM SCOTT.EMP WHERE JOB =(SELECT JOB FROM SCOTT.EMP WHERE EMPNO = 7369)
AND SAL > (SELECT SAL FROM SCOTT.EMP WHERE EMPNO = 7876);

-- Exercício 3
SELECT ENAME, JOB, SAL FROM SCOTT.EMP WHERE SAL IN (SELECT MIN(SAL) FROM SCOTT.EMP);

-- Exercício 4
SELECT DEPTNO, MIN(SAL) FROM SCOTT.EMP GROUP BY DEPTNO HAVING MIN(SAL) > (SELECT MIN(SAL) FROM SCOTT.EMP WHERE DEPTNO = 20);

-- Exercício 5
SELECT ENAME, DEPTNO, JOB FROM SCOTT.EMP WHERE DEPTNO = (SELECT DEPTNO FROM SCOTT.DEPT WHERE LOC = 'DALLAS');

-- Exercício 6
SELECT DEPTNO, ENAME, SAL FROM SCOTT.EMP WHERE SAL IN (SELECT MIN(SAL) FROM SCOTT.EMP GROUP BY DEPTNO);

-- Exercício 7
SELECT EMPNO, ENAME FROM SCOTT.EMP WHERE DEPTNO IN (SELECT DEPTNO FROM SCOTT.EMP WHERE ENAME LIKE '%T%');

-- Exercício 8
SELECT * FROM SCOTT.EMP E WHERE HIREDATE IN (SELECT MAX(HIREDATE) FROM SCOTT.EMP WHERE DEPTNO = E.DEPTNO) ORDER BY HIREDATE;

-- Exercício 9
SELECT E.ENAME, D.DNAME, D.LOC FROM SCOTT.EMP E JOIN SCOTT.DEPT D ON E.DEPTNO = D.DEPTNO WHERE E.COMM IS NOT NULL AND E.COMM > 0;

-- Exercício 10
SELECT E.ENAME, D.DEPTNO, D.LOC FROM SCOTT.EMP E JOIN SCOTT.DEPT D ON E.DEPTNO = D.DEPTNO WHERE E.ENAME = 'KING';

-- Exercício 11
SELECT DISTINCT E.JOB, E.DEPTNO, D.LOC FROM SCOTT.EMP E JOIN SCOTT.DEPT D ON E.DEPTNO = D.DEPTNO WHERE E.DEPTNO = 30;

-- Exercício 12
SELECT E.ENAME, D.DEPTNO FROM SCOTT.EMP E JOIN SCOTT.DEPT D ON E.DEPTNO = D.DEPTNO WHERE E.ENAME LIKE '%A%';

-- Exercício 13 
SELECT E.ENAME, E.JOB, E.EMPNO, D.DNAME FROM SCOTT.EMP E JOIN SCOTT.DEPT D ON E.DEPTNO = D.DEPTNO WHERE D.LOC = 'DALLAS';

-- Exercício 14
SELECT E.ENAME, E.JOB, E.EMPNO, D.DNAME FROM SCOTT.EMP E JOIN SCOTT.DEPT D ON E.DEPTNO = D.DEPTNO WHERE D.LOC IN ('DALLAS', 'NEW YORK');

-- Exercício 15
SELECT F.EMPNO, F.ENAME, G.ENAME AS "GERENTE" FROM SCOTT.EMP F JOIN SCOTT.EMP G ON F.MGR = G.EMPNO;