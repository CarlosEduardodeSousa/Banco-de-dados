--Exercício 1
SELECT * FROM SCOTT.EMP WHERE SAL BETWEEN 800 AND 1600;

--Exercício 2
SELECT * FROM SCOTT.EMP WHERE SAL >= 800 AND SAL <=1600;

--Exercício 3
SELECT * FROM SCOTT.EMP WHERE SAL BETWEEN 200 AND 1000;

--Exercício 4
SELECT * FROM SCOTT.EMP WHERE SAL <= 1000 AND SAL >=200;

--Exercício 5
SELECT EMPNO, ENAME FROM SCOTT.EMP WHERE (EMPNO = 7839 OR EMPNO = 7566 OR EMPNO = 7788);

--Exercício 6
SELECT * FROM SCOTT.EMP WHERE ENAME LIKE 'A%' OR ENAME LIKE 'J%';

--Exercício 7
SELECT * FROM SCOTT.EMP WHERE SUBSTR(ENAME,2,1) = 'A' OR SUBSTR(ENAME,2,1) = 'I';

--Exercício 8
SELECT SUM(SAL) FROM SCOTT.EMP;

--Exercício 9
SELECT ENAME, JOB, SAL, SAL + 700 FROM SCOTT.EMP WHERE JOB IN ('ANALYST', 'SALESMAN');

--Exercício 10
SELECT ENAME,JOB, SAL, TO_CHAR(HIREDATE, 'DD/MM/YYYY') AS "DATA DE CONTRATAÇÃO" FROM SCOTT.EMP WHERE JOB = 'MANAGER' OR JOB = 'SALESMAN';

--Exercício 11
SELECT COUNT(EMPNO) FROM SCOTT.EMP WHERE DEPTNO = 30;

--Exercício 12
SELECT COUNT(EMPNO) FROM SCOTT.EMP WHERE DEPTNO = 30 AND COMM >0;

--Exercício 13
SELECT * FROM SCOTT.EMP WHERE ENAME = UPPER('jones');

--Exercício 14
SELECT SUM(SAL) AS "SAL_TOTAL", COUNT(EMPNO) AS "NUM_FUNC" FROM SCOTT.EMP WHERE DEPTNO = 20;

--Exercício 15
SELECT DEPTNO, COUNT(EMPNO) AS "QUANT_FUNCIONARIOS", MAX(SAL), MIN(SAL), ROUND(AVG(SAL)) AS "SAL_ARRENDONDADO" FROM SCOTT.EMP GROUP BY DEPTNO;

--Exercício 16
SELECT COUNT(EMPNO), JOB FROM SCOTT.EMP GROUP BY JOB;

--Exercício 17
SELECT COUNT(EMPNO), JOB FROM SCOTT.EMP GROUP BY JOB HAVING COUNT(EMPNO) > 2;

--Exercício 18
SELECT JOB, ROUND(AVG(SAL)) AS "MEDIA_SAL" FROM SCOTT.EMP GROUP BY JOB HAVING ROUND(AVG(SAL)) > 2000;

--Exercício 19
SELECT JOB, MAX(SAL), MIN(SAL), ROUND(AVG(SAL)) AS "MEDIA_SAL" FROM SCOTT.EMP GROUP BY JOB HAVING JOB <> 'PRESIDENT';