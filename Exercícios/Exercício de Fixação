
-- Exercício 1
SELECT EMPLOYEE_ID, LAST_NAME, JOB_ID, HIRE_DATE AS "STARDATE" FROM HR.EMPLOYEES;

--Exercício 2
SELECT JOB_ID FROM HR.EMPLOYEES;

--Exercício 3
SELECT LAST_NAME || ', ' ||  JOB_ID AS "fUNCIONARIO E CARGO" FROM HR.EMPLOYEES;

--Exercício 4
SELECT LAST_NAME, SALARY FROM HR.EMPLOYEES WHERE SALARY > 12000;

--Exercício 5
SELECT LAST_NAME, DEPARTMENT_ID FROM HR.EMPLOYEES WHERE EMPLOYEE_ID = 176;

--Exercício 6
SELECT LAST_NAME, SALARY FROM HR.EMPLOYEES WHERE SALARY NOT BETWEEN 5000 AND 12000;

--Exercício 7
SELECT LAST_NAME, JOB_ID, HIRE_DATE FROM HR.EMPLOYEES WHERE LAST_NAME IN ('Matos', 'Taylor') ORDER BY HIRE_DATE ASC;

--Exercício 8
SELECT LAST_NAME, DEPARTMENT_ID FROM HR.EMPLOYEES WHERE DEPARTMENT_ID = 20 OR DEPARTMENT_ID = 50 ORDER BY LAST_NAME;

--Exercício 9
SELECT DEPARTMENT_ID, LAST_NAME, SALARY FROM HR.EMPLOYEES WHERE SALARY BETWEEN 5000 AND 12000 AND DEPARTMENT_ID = 20 OR DEPARTMENT_ID = 50;

--Exercício 10
SELECT MAX(SALARY) AS "MÁXIMO", MIN(SALARY) AS "MÍNIMO", SUM(SALARY) AS "SOMA", AVG(SALARY) AS "MÉDIA" FROM HR.EMPLOYEES;

--Exercício 11 
SELECT JOB_ID,MAX(SALARY) AS "MÁXIMO", MIN(SALARY) AS "MÍNIMO", SUM(SALARY) AS "SOMA", AVG(SALARY) AS "MÉDIA" FROM HR.EMPLOYEES GROUP BY JOB_ID;

--Exercício 12 
SELECT COUNT(LAST_NAME) AS "NUM_PEOPLE", JOB_ID FROM HR.EMPLOYEES GROUP BY JOB_ID; 

--Exercício 13 
SELECT MAX(SALARY), MIN(SALARY), MAX(SALARY) - MIN(SALARY) AS "DIFERENÇA" FROM HR.EMPLOYEES;

--Exercício 14
SELECT L.LOCATION_ID, L.STREET_ADDRESS, L.CITY, L.STATE_PROVINCE, C.COUNTRY_ID FROM HR.LOCATIONS L JOIN HR.COUNTRIES C ON L.COUNTRY_ID = C.COUNTRY_ID;

--Exercício 15
SELECT E.LAST_NAME, E.DEPARTMENT_ID, D.DEPARTMENT_NAME FROM HR.EMPLOYEES E JOIN HR.DEPARTMENTS D ON E.DEPARTMENT_ID = D.DEPARTMENT_ID; 

--Exercício 16
SELECT E.LAST_NAME, E.JOB_ID, E.DEPARTMENT_ID, D.DEPARTMENT_NAME FROM HR.EMPLOYEES E JOIN HR.DEPARTMENTS D  ON  E.DEPARTMENT_ID = D.DEPARTMENT_ID WHERE D.LOCATION_ID = 1800;

--Exercício 17
SELECT E.LAST_NAME AS "EMPLOYEE", E.EMPLOYEE_ID AS "EMP#", G.LAST_NAME AS "MANAGER", G.MANAGER_ID AS "MGR#" FROM HR.EMPLOYEES E, HR.EMPLOYEES G;

--Exercício 18
SELECT EMPLOYEE_ID, LAST_NAME, SALARY FROM HR.EMPLOYEES WHERE SALARY > (SELECT AVG(SALARY) FROM HR.EMPLOYEES);
