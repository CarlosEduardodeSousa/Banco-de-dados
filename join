--JUNÇÃO DE TABELAS 

-- JUNÇÃO DE TABELAS COM WHERE

SELECT EMPNO, ENAME, LOC FROM SCOTT.EMP, SCOTT.DEPT WHERE EMP.DEPTNO = DEPT.DEPTNO; -- NESSE CASO OCORRE ERRO NA VISUALIZAÇÃO DO DEPTNO

SELECT EMPNO, ENAME, EMP.DEPTNO, LOC FROM SCOTT.EMP, SCOTT.DEPT WHERE EMP.DEPTNO = DEPT.DEPTNO;
 -- CASO QUEIRA VER O DEPTNO DA TABELA TEM QUE EXPECIFICAR QUAL DEPTNO NA TABELA VOCÊ QUER

SELECT EMPNO, ENAME, DEPT.DEPTNO, DNAME FROM SCOTT.EMP, SCOTT.DEPT WHERE EMP.DEPTNO = DEPT.DEPTNO;

SELECT EMP.EMPNO, EMP.ENAME, DEPT.DEPTNO, DEPT.DNAME FROM SCOTT.EMP, SCOTT.DEPT WHERE EMP.DEPTNO = DEPT.DEPTNO;

SELECT E.EMPNO, E.ENAME, D.DEPTNO, D.DNAME FROM SCOTT.EMP E, SCOTT.DEPT D WHERE E.DEPTNO = D.DEPTNO; -- USANDO ALIASES

-- JUNÇÃO DE TABELAS COM JOIN

SELECT E.EMPNO, E.ENAME, D.DEPTNO, D.DNAME FROM SCOTT.EMP E JOIN SCOTT.DEPT D ON E.DEPTNO = D.DEPTNO AND D.DNAME = 'ACCOUNTING'; 

SELECT E.EMPNO, E.ENAME, D.DEPTNO, D.DNAME FROM SCOTT.EMP E JOIN SCOTT.DEPT D ON E.DEPTNO = D.DEPTNO WHERE D.DNAME = 'ACCOUNTING'; 

-- JUNÇÃO PRODUTO CARTESIANO (TEM QUE FILTRAR A TABELA PARA FAZER SENTIDO)

SELECT EMP.ENAME, EMP.DEPTNO, DEPT.DNAME FROM SCOTT.EMP, SCOTT.DEPT;

SELECT EMP.ENAME, EMP.DEPTNO, DEPT.DNAME FROM SCOTT.EMP CROSS JOIN SCOTT.DEPT WHERE DEPT.DEPTNO = EMP.DEPTNO;

-- SELF JOIN (JUNÇÃO DA MESMA TABELA)

SELECT  FUNCIONARIO.EMPNO,FUNCIONARIO.ENAME, GERENTE.ENAME AS "GERENTE" FROM SCOTT.EMP FUNCIONARIO JOIN SCOTT.EMP GERENTE ON FUNCIONARIO.MGR = GERENTE.EMPNO;

SELECT EMP.ENAME, EMP.DEPTNO, DEPT.DNAME FROM SCOTT.EMP, SCOTT.DEPT WHERE EMP.DEPTNO = DEPT.DEPTNO AND EMP.ENAME = 'TURNER';
